<ivysettings>
  <settings defaultResolver="chain"/>
  <resolvers>
    <chain name="chain">
      <url name="pentaho-rep" m2compatible="true">
        <artifact pattern="https://public.nexus.pentaho.org/service/local/repositories/proxy-public-3rd-party-release/content/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
        <artifact pattern="https://public.nexus.pentaho.org/service/local/repositories/proxy-public-3rd-party-release/content/[organisation]/[module]/[revision]/[artifact].[ext]" />
        <artifact pattern="http://nexus.dc-local/service/local/repositories/dc-local/content/[organisation]/[module]/[revision]/[artifact]-[revision].[ext]" />
        <artifact pattern="http://nexus.dc-local/service/local/repositories/dc-local/content/[organisation]/[module]/[revision]/[artifact].[ext]" />
      </url>
      <ibiblio name="ibiblio" m2compatible="true" />
    </chain>
  </resolvers>
</ivysettings>
